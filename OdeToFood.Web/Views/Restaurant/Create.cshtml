@model OdeToFood.Data.Models.Restaurant

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<!-- Creates a form, and puts all the info between { and } into it -->
@using (Html.BeginForm()) 
{
    <!-- Prevent XSS-->
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Restaurant</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label for="Name" class="control-label col-md-2">Name</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            <!-- Errors, validation messages-->
            <!-- pass anonymous classes to the HTML helpers, and razor engine will translate those to HTML attributes on the element-->
        </div>
    </div>

    <div class="form-group">
        <label for="Cuisine" class="control-label col-md-2">Cuisine</label>
        <div class="col-md-10">
            @Html.EnumDropDownListFor(model => model.Cuisine, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Cuisine, "", new { @class = "text-danger" })
            <!-- Errors, validation messages-->
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
